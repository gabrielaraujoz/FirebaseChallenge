<?xml version="1.0" encoding="utf-8"?>

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".games.view.GameDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/imgGameView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:src="@drawable/splash_screen_wallpaper"
                    android:contentDescription="@string/foto_do_game" />

                <ImageView
                    android:id="@+id/imgBackGameDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="18dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:contentDescription="@string/seta_para_voltar" />

                <TextView
                    android:id="@+id/txtGameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="24dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnEditGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/add_new_game_button"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:layout_alignParentBottom="true"
                    android:baselineAlignBottom="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtGameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/card_game_name"
                tools:text="Mortal Combat X"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="19dp"/>

            <TextView
                android:id="@+id/txtGameYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/normal_text"
                tools:text="LanÃ§amento: 2018"
                android:textSize="21sp"
                android:layout_marginStart="19dp"/>


            <TextView
                android:id="@+id/txtGameDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/normal_text"
                android:layout_marginTop="25dp"
                tools:text="@string/sinopse_mortal_combat"
                android:textSize="21sp"
                android:layout_marginStart="14dp"/>

        </LinearLayout>
</androidx.core.widget.NestedScrollView>
